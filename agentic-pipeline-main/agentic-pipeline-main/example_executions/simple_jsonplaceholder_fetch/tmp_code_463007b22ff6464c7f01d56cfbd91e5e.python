import requests
import json

# Define the URL of the API
base_url = "https://jsonplaceholder.typicode.com/posts/"

# Create an empty list to store the posts
posts = []

# Loop through the first 10 posts
for post_number in range(1, 11):
    # Construct the URL for the current post
    url = base_url + str(post_number)

    # Make a GET request to the API
    response = requests.get(url)

    # Check if the request was successful
    if response.status_code == 200:
        # Parse the JSON response
        post_data = response.json()

        # Add the post data to the list
        posts.append(post_data)

# Save the posts data to a JSON file
with open("posts.json", "w") as f:
    json.dump(posts, f, indent=4)

# Print a message to indicate successful execution
print("Data saved to posts.json")